<Window x:Class="Concurrency_Pitfalls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Concurrency_Pitfalls"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label x:Name="label" Content="{Binding Value}" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <Button x:Name="button" Grid.Row="1" Content="Click Here" Width="75" Click="button_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
